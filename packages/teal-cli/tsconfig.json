{
    "extends": "../../tsconfig.root.json",
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "lib": ["ES6", "dom"],
        "allowJs": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "types",
        "typeRoots": ["node_modules/@types"],
        "outDir": ".",
        "types": ["node"],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["node_modules"]
}
